<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:id="@+id/select_Service"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select a Service"
        android:textAllCaps='false'
        android:textSize="40dp"
        android:layout_marginTop="25dp"
        android:gravity="center"
        />
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/select_Service">
        <TextView
            android:id="@+id/Spotify_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="150dp"
            android:layout_marginLeft="25dp"
            android:text="Spotify"
            android:textSize="23dp" />

        <Button
            android:id="@+id/Spotify_signin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="300dp"
            android:layout_marginTop="150dp"
            android:text="Select"/>
        <TextView
            android:id="@+id/Apple_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="180dp"
            android:layout_marginLeft="25dp"
            android:text="Apple Music"
            android:textSize="23dp" />

        <Button
            android:id="@+id/Apple_signin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="300dp"
            android:layout_marginTop="180dp"
            android:text="Select" />
        <TextView
            android:id="@+id/Tidal_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="210dp"
            android:layout_marginLeft="25dp"
            android:text="Tidal"
            android:textSize="23dp" />

        <Button
            android:id="@+id/Tidal_signin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="300dp"
            android:layout_marginTop="210dp"
            android:text="Select" />
        <TextView
            android:id="@+id/Google_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="240dp"
            android:layout_marginLeft="25dp"
            android:text="Google Play Music"
            android:textSize="23dp" />

        <Button
            android:id="@+id/Google_signin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="300dp"
            android:layout_marginTop="240dp"
            android:text="Select" />
    </RelativeLayout>

    <Button
        android:id="@+id/finish_service_selection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="450dp"
        android:textSize="30dp"
        android:text="Done" />

</RelativeLayout>