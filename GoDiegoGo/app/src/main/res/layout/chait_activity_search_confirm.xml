<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/confirm_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Playlist 'Sraight Vibes' was found on Spotify. Choose a service you want to transfer it to."
        android:textAllCaps='false'
        android:textSize="25dp"
        android:layout_marginTop="15dp"
        />

    <TextView
        android:id="@+id/Spotify_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:layout_marginLeft="25dp"
        android:text="Spotify"
        android:textSize="23dp" />

    <Button
        android:layout_width="65dp"
        android:layout_height="30dp"
        android:layout_marginLeft="300dp"
        android:layout_marginTop="150dp"
        android:text="Sign in" />
    <TextView
        android:id="@+id/Apple_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="180dp"
        android:layout_marginLeft="25dp"
        android:text="Apple Music"
        android:textSize="23dp" />

    <Button
        android:layout_width="65dp"
        android:layout_height="30dp"
        android:layout_marginLeft="300dp"
        android:layout_marginTop="180dp"
        android:text="Sign in" />
    <TextView
        android:id="@+id/Todal_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="210dp"
        android:layout_marginLeft="25dp"
        android:text="Tidal"
        android:textSize="23dp" />

    <Button
        android:layout_width="65dp"
        android:layout_height="30dp"
        android:layout_marginLeft="300dp"
        android:layout_marginTop="210dp"
        android:text="Sign in" />
    <TextView
        android:id="@+id/Google_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="240dp"
        android:layout_marginLeft="25dp"
        android:text="Google Play Music"
        android:textSize="23dp" />

    <Button
        android:layout_width="65dp"
        android:layout_height="30dp"
        android:layout_marginLeft="300dp"
        android:layout_marginTop="240dp"
        android:text="Sign in" />

    <Button
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="650dp"
        android:textSize="35dp"
        android:text="Transfer" />


</RelativeLayout>