<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SearchConfirmActivity"
    android:background="@color/ghost_white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:paddingHorizontal="40dp">

        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"></Space>

        <TextView
            android:id="@+id/transfer_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Playlist _________ was found on Spotify. Choose which service you'd like to transfer it to:"
            android:textColor="@color/black"
            android:textSize="10pt"
            android:layout_gravity="center_horizontal|top">
        </TextView>
        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"></Space>
        <GridLayout
            android:id="@+id/service_choices"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:elevation="4dp"
            android:paddingHorizontal="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="0"
                android:text="Spotify"
                android:textColor="@color/black"
                android:layout_gravity="left"
                android:textSize="8pt"></TextView>
            <Button
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_row="0"
                android:layout_column="1"
                android:text="Select"
                android:textSize="6pt"
                android:layout_gravity="right">
            </Button>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_column="0"
                android:text="Apple Music"
                android:textColor="@color/black"
                android:layout_gravity="left"
                android:textSize="8pt"></TextView>
            <Button
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_row="1"
                android:layout_column="1"
                android:text="Select"
                android:textSize="6pt"
                android:layout_gravity="right">
            </Button>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="2"
                android:layout_column="0"
                android:text="Tidal"
                android:textColor="@color/black"
                android:layout_gravity="left"
                android:textSize="8pt"></TextView>
            <Button
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_row="2"
                android:layout_column="1"
                android:text="Log In"
                android:textSize="6pt"
                android:layout_gravity="right">
            </Button>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="3"
                android:layout_column="0"
                android:text="Google Play Music"
                android:textColor="@color/black"
                android:layout_gravity="left"
                android:textSize="8pt"></TextView>
            <Button
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_row="3"
                android:layout_column="1"
                android:text="Log In"
                android:textSize="6pt"
                android:layout_gravity="right">
            </Button>
        </GridLayout>
        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"></Space>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="8pt"
            android:textColor="@color/black"
            android:layout_marginBottom="10dp"
            android:text="Preview of playlist:"></TextView>
        <ListView
            android:id="@+id/playlist_preview"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="12"
            android:background="@color/white"
            android:elevation="4dp">
        </ListView>
        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"></Space>
        <Button xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/search_cancel_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/dark_spring_green"
            android:text="Cancel"
            android:layout_gravity="center_horizontal|bottom">
        </Button>
        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"></Space>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>